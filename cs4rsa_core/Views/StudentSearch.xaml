<UserControl
    x:Class="cs4rsa_core.Views.StudentSearch"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:cs4rsa_core.ViewModels"
    xmlns:vml="clr-namespace:cs4rsa_core.ViewModelLocator"
    Padding="5"
    d:DataContext="{d:DesignInstance Type=viewmodels:StudentSearchViewModel}"
    d:DesignHeight="550"
    d:DesignWidth="900"
    vml:ViewModelLocator.AutoHookedUpViewModel="True"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{DynamicResource MaterialDesignFont}"
    Loaded="UserControl_Loaded"
    TextElement.FontSize="13"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <StackPanel Margin="0,0,5,10" Orientation="Vertical">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBox
                    Grid.Column="0"
                    Width="150"
                    Margin="0,0,5,7"
                    VerticalAlignment="Top"
                    materialDesign:HintAssist.Hint="Mã sinh viên"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    Text="{Binding Code}" />
                <Button
                    Grid.Column="1"
                    Margin="0,0,0,7"
                    Command="{Binding SearchCommand}"
                    Content="Tìm kiếm" />
                <TextBox
                    Grid.Row="1"
                    Grid.Column="0"
                    Width="150"
                    Margin="0,0,5,7"
                    VerticalAlignment="Top"
                    materialDesign:HintAssist.Hint="Từ URL"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    Text="{Binding Code}" />
                <Button
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="0,0,0,5"
                    Content="Tìm kiếm" />
                <TextBox
                    Grid.Row="2"
                    Grid.Column="0"
                    Width="150"
                    Margin="0,0,5,5"
                    VerticalAlignment="Top"
                    materialDesign:HintAssist.Hint="Từ Excel"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    Text="{Binding Code}" />
                <Button
                    Grid.Row="2"
                    Grid.Column="1"
                    Margin="0,0,0,5"
                    Content="Duyệt..." />
            </Grid>
            <Button Content="Mở thư mục" />
        </StackPanel>

        <StackPanel Grid.Column="1">
            <TextBlock Style="{StaticResource MaterialDesignHeadline5TextBlock}" Text="Danh sách tìm được" />
            <DataGrid
                AutoGenerateColumns="False"
                CanUserAddRows="False"
                ItemsSource="{Binding StudentImages}">
                <DataGrid.Columns>
                    <DataGridTextColumn>
                        <DataGridTextColumn.Header>
                            <TextBlock Text="Họ" />
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>
                    <DataGridTextColumn>
                        <DataGridTextColumn.Header>
                            <TextBlock Text="Tên" />
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>
                    <DataGridTextColumn Binding="{Binding Code}" IsReadOnly="True">
                        <DataGridTextColumn.Header>
                            <TextBlock Text="Mã sinh viên" />
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>
                    <DataGridTextColumn IsReadOnly="True">
                        <DataGridTextColumn.Header>
                            <TextBlock Text="Ngành" />
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>
                    <DataGridTextColumn IsReadOnly="True">
                        <DataGridTextColumn.Header>
                            <TextBlock Text="Lớp sinh hoạt" />
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
