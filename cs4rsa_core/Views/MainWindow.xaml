<Window
    x:Class="cs4rsa_core.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:cs4rsa_core.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:cs4rsa_core.ViewModels"
    xmlns:vml="clr-namespace:cs4rsa_core.ViewModelLocator"
    Title="CS4RSA"
    Width="1300"
    Height="800"
    d:DataContext="{d:DesignInstance Type=viewmodels:MainWindowViewModel}"
    vml:ViewModelLocator.AutoHookedUpViewModel="True"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{DynamicResource MaterialDesignFont}"
    ResizeMode="CanMinimize"
    TextElement.FontSize="13"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.Resources>
        <Style BasedOn="{StaticResource {x:Type materialDesign:SnackbarMessage}}" TargetType="{x:Type materialDesign:SnackbarMessage}">
            <Setter Property="HorizontalContentAlignment" Value="Center" />
        </Style>
        <Style
            x:Key="Style_Cs4rsa_SnackbarActionButton"
            BasedOn="{StaticResource MaterialDesignSnackbarActionButton}"
            TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource PrimaryHueMidBrush}" />
        </Style>
    </Window.Resources>
    <materialDesign:DialogHost
        CloseOnClickAway="{Binding IsCloseOnClickAway}"
        DialogContent="{Binding DialogUC}"
        IsOpen="{Binding IsOpenDialog}">
        <Grid>
            <materialDesign:DrawerHost
                x:Name="DrawerHost"
                Grid.Row="0"
                Grid.ColumnSpan="2">
                <materialDesign:DrawerHost.LeftDrawerContent>
                    <Grid Background="{StaticResource PrimaryHueMidBrush}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <ToggleButton
                            Grid.Row="0"
                            Margin="0,16,10,16"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Command="{x:Static materialDesign:DrawerHost.CloseDrawerCommand}"
                            CommandParameter="{x:Static Dock.Left}"
                            Foreground="White"
                            IsChecked="{Binding ElementName=DrawerHost, Path=IsLeftDrawerOpen}"
                            Style="{DynamicResource MaterialDesignHamburgerToggleButton}" />
                        <Grid
                            x:Name="Grid_Menu"
                            Grid.Row="1"
                            HorizontalAlignment="Left">
                            <materialDesign:TransitioningContent x:Name="TrainsitionigContentSlide" OpeningEffect="{materialDesign:TransitionEffect Kind=SlideInFromLeft, Duration=0:0:0.3}">
                                <Grid
                                    x:Name="GridCursor"
                                    Width="10"
                                    Height="60"
                                    Margin="0,100,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Background="{StaticResource PrimaryHueMidBrush}" />
                            </materialDesign:TransitioningContent>
                            <ListView
                                x:Name="ListViewMenu"
                                FontSize="13"
                                Foreground="White"
                                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                SelectionChanged="ListViewMenu_SelectionChanged">
                                <ListViewItem Height="60">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon
                                            Width="30"
                                            Height="30"
                                            Margin="10,0,10,0"
                                            VerticalAlignment="Center"
                                            Kind="Home" />
                                        <TextBlock
                                            Margin="5,0"
                                            VerticalAlignment="Center"
                                            FontSize="15"
                                            Text="Trang chủ" />
                                    </StackPanel>
                                </ListViewItem>
                                <ListViewItem Height="60">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon
                                            Width="30"
                                            Height="30"
                                            Margin="10,0,10,0"
                                            VerticalAlignment="Center"
                                            Kind="Account" />
                                        <TextBlock
                                            Margin="5,0"
                                            VerticalAlignment="Center"
                                            FontSize="15"
                                            Text="Tài khoản DTU" />
                                    </StackPanel>
                                </ListViewItem>
                                <ListViewItem Height="60">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon
                                            Width="30"
                                            Height="30"
                                            Margin="10,0,10,0"
                                            VerticalAlignment="Center"
                                            Kind="Calendar" />
                                        <TextBlock
                                            Margin="5,0"
                                            VerticalAlignment="Center"
                                            FontSize="15"
                                            Text="Xếp lịch thủ công" />
                                    </StackPanel>
                                </ListViewItem>
                                <ListViewItem Height="60">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon
                                            Width="30"
                                            Height="30"
                                            Margin="10,0,10,0"
                                            VerticalAlignment="Center"
                                            Kind="AutoFix" />
                                        <TextBlock
                                            Margin="5,0"
                                            VerticalAlignment="Center"
                                            FontSize="15"
                                            Text="Xếp lịch tự động" />
                                    </StackPanel>
                                </ListViewItem>
                                <ListViewItem Height="60">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon
                                            Width="30"
                                            Height="30"
                                            Margin="10,0,10,0"
                                            VerticalAlignment="Center"
                                            Kind="CreditCardSearch" />
                                        <TextBlock
                                            Margin="5,0"
                                            VerticalAlignment="Center"
                                            FontSize="15"
                                            Text="Bạn thi cùng phòng ?" />
                                    </StackPanel>
                                </ListViewItem>
                                <ListViewItem Height="60">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon
                                            Width="30"
                                            Height="30"
                                            Margin="10,0,10,0"
                                            VerticalAlignment="Center"
                                            Kind="Information" />
                                        <TextBlock
                                            Margin="5,0"
                                            VerticalAlignment="Center"
                                            FontSize="15"
                                            Text="Thông tin" />
                                    </StackPanel>
                                </ListViewItem>
                            </ListView>
                        </Grid>
                    </Grid>
                </materialDesign:DrawerHost.LeftDrawerContent>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <materialDesign:ColorZone
                        Grid.Row="0"
                        Padding="16"
                        Mode="PrimaryMid">
                        <DockPanel>
                            <StackPanel Orientation="Horizontal">
                                <ToggleButton
                                    Command="{x:Static materialDesign:DrawerHost.OpenDrawerCommand}"
                                    CommandParameter="{x:Static Dock.Left}"
                                    IsChecked="{Binding ElementName=DrawerHost, Path=IsLeftDrawerOpen}"
                                    Style="{DynamicResource MaterialDesignHamburgerToggleButton}" />
                                <TextBlock
                                    Margin="16,0,0,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                                    Text="Credit Simulation 4nd Register Support Application" />
                            </StackPanel>
                            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                                <Button
                                    Margin="16,0,0,0"
                                    materialDesign:RippleAssist.Feedback="{Binding RelativeSource={RelativeSource Self}, Path=Foreground, Converter={StaticResource BrushRoundConverter}}"
                                    Click="GotoHome"
                                    Content="{materialDesign:PackIcon Kind=Home,
                                                                      Size=24}"
                                    Foreground="{Binding RelativeSource={RelativeSource AncestorType={x:Type FrameworkElement}}, Path=(TextElement.Foreground)}"
                                    Style="{StaticResource MaterialDesignToolButton}"
                                    ToolTip="Trang chủ" />
                                <Button
                                    Margin="16,0,0,0"
                                    materialDesign:RippleAssist.Feedback="{Binding RelativeSource={RelativeSource Self}, Path=Foreground, Converter={StaticResource BrushRoundConverter}}"
                                    Click="GotoAccount"
                                    Content="{materialDesign:PackIcon Kind=Account,
                                                                      Size=24}"
                                    Foreground="{Binding RelativeSource={RelativeSource AncestorType={x:Type FrameworkElement}}, Path=(TextElement.Foreground)}"
                                    Style="{StaticResource MaterialDesignToolButton}"
                                    ToolTip="Danh sách tài khoản" />
                                <Button
                                    Margin="16,0,0,0"
                                    materialDesign:RippleAssist.Feedback="{Binding RelativeSource={RelativeSource Self}, Path=Foreground, Converter={StaticResource BrushRoundConverter}}"
                                    Click="GotoXepLichThuCong"
                                    Content="{materialDesign:PackIcon Kind=Calendar,
                                                                      Size=24}"
                                    Foreground="{Binding RelativeSource={RelativeSource AncestorType={x:Type FrameworkElement}}, Path=(TextElement.Foreground)}"
                                    Style="{StaticResource MaterialDesignToolButton}"
                                    ToolTip="Xếp lịch thủ công" />
                                <Button
                                    Margin="16,0,0,0"
                                    materialDesign:RippleAssist.Feedback="{Binding RelativeSource={RelativeSource Self}, Path=Foreground, Converter={StaticResource BrushRoundConverter}}"
                                    Click="GotoXepLichTuDong"
                                    Content="{materialDesign:PackIcon Kind=AutoFix,
                                                                      Size=24}"
                                    Foreground="{Binding RelativeSource={RelativeSource AncestorType={x:Type FrameworkElement}}, Path=(TextElement.Foreground)}"
                                    Style="{StaticResource MaterialDesignToolButton}"
                                    ToolTip="Xếp lịch tự động" />
                                <Button
                                    Margin="16,0,0,0"
                                    materialDesign:RippleAssist.Feedback="{Binding RelativeSource={RelativeSource Self}, Path=Foreground, Converter={StaticResource BrushRoundConverter}}"
                                    Click="GotoSearch"
                                    Content="{materialDesign:PackIcon Kind=CreditCardSearch,
                                                                      Size=24}"
                                    Foreground="{Binding RelativeSource={RelativeSource AncestorType={x:Type FrameworkElement}}, Path=(TextElement.Foreground)}"
                                    Style="{StaticResource MaterialDesignToolButton}"
                                    ToolTip="Bạn thi cùng phòng?" />
                                <Button
                                    Margin="16,0,0,0"
                                    materialDesign:RippleAssist.Feedback="{Binding RelativeSource={RelativeSource Self}, Path=Foreground, Converter={StaticResource BrushRoundConverter}}"
                                    Click="GotoThongTin"
                                    Content="{materialDesign:PackIcon Kind=Information,
                                                                      Size=24}"
                                    Foreground="{Binding RelativeSource={RelativeSource AncestorType={x:Type FrameworkElement}}, Path=(TextElement.Foreground)}"
                                    Style="{StaticResource MaterialDesignToolButton}"
                                    ToolTip="Thông tin" />
                                <Rectangle
                                    Width="2"
                                    Margin="16,0,0,0"
                                    VerticalAlignment="Stretch"
                                    Fill="White" />
                                <Button
                                    Margin="16,0,0,0"
                                    materialDesign:RippleAssist.Feedback="{Binding RelativeSource={RelativeSource Self}, Path=Foreground, Converter={StaticResource BrushRoundConverter}}"
                                    Command="{Binding OpenUpdateWindowCommand}"
                                    Content="{materialDesign:PackIcon Kind=Database,
                                                                      Size=24}"
                                    Foreground="{Binding RelativeSource={RelativeSource AncestorType={x:Type FrameworkElement}}, Path=(TextElement.Foreground)}"
                                    Style="{StaticResource MaterialDesignToolButton}"
                                    ToolTip="Cập nhật cơ sở dữ liệu môn học" />
                            </StackPanel>
                        </DockPanel>
                    </materialDesign:ColorZone>
                    <Grid Grid.Row="1">
                        <materialDesign:Transitioner SelectedIndex="{Binding SelectedIndex}">
                            <local:Home />
                            <local:Login />
                            <local:MainScheduling />
                            <local:AutoSchedule />
                            <local:StudentSearch />
                            <local:Info />
                            <!--<materialDesign:TransitionerSlide>
                                <materialDesign:TransitionerSlide.BackwardWipe>
                                    <materialDesign:SlideWipe Direction="Down" />
                                </materialDesign:TransitionerSlide.BackwardWipe>
                                <materialDesign:TransitionerSlide.ForwardWipe>
                                    <materialDesign:SlideWipe Direction="Up" />
                                </materialDesign:TransitionerSlide.ForwardWipe>
                                <local:Info />
                            </materialDesign:TransitionerSlide>-->
                        </materialDesign:Transitioner>
                        <materialDesign:Snackbar
                            HorizontalAlignment="Center"
                            ActionButtonStyle="{StaticResource ResourceKey=Style_Cs4rsa_SnackbarActionButton}"
                            MessageQueue="{Binding SnackbarMessageQueue}">
                            <materialDesign:SnackbarMessage HorizontalContentAlignment="Center" />
                        </materialDesign:Snackbar>
                    </Grid>
                </Grid>
            </materialDesign:DrawerHost>
        </Grid>
    </materialDesign:DialogHost>
</Window>
